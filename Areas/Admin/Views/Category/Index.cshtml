@model IEnumerable<Category>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewBag.Title = "إدارة التصنيفات";
    ViewBag.pagetitle = "عرض التصنيفات";
}


<a class="btn btn-primary mb-3 text-bold" asp-action="Create" asp-area="Admin">
جديد</a>

@if(Model.Any()){
<table class="table table-bordered">
    <thead>
        <tr>
        <th>@Html.DisplayNameFor(c=>c.CategoryName)</th>
    <th>@Html.DisplayNameFor(c=>c.Description)</th>
    <th>العمليات</th>
            </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td>
                    <a class="btn btn-success" asp-route-id="@item.Id" asp-action="Edit" > تعديل</a>
                        <a class="btn btn-danger me-2" asp-route-id="@item.Id" asp-action="Delete"> حذف</a>
                </td>
            </tr>
        }
    </tbody>
    </table>
}
else
{
    <p class="alert alert-danger"> There is no Category</p>
}